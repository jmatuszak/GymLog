@model IEnumerable<WorkoutSegment>

    <h1>WorkoutSegments</h1>
<a asp-controller="WorkoutSegment" asp-action="Create" class="btn btn-sm btn-outline-info" style="margin-bottom:10px;">Create new</a>

        <table>
        <tr>
            <th width="5%">Id</th>
            <th>Description</th>
            <th>Exercise ID</th>
            <th>Weight Type</th>
            <th>Template ID</th>
            <th>Workout ID</th>
            <th>Sets</th>
      </tr>
    @foreach (var Item in @Model)
    {
            <tr>
                <td>
                    @Item.Id
                </td>
                <td>
                    @Item.Description
                </td>
                <td>
                    @Item.ExerciseId
                </td>
                <td>
                    @Item.WeightType
                </td>
                <td>
                    @Item.TemplateId
                </td>
                <td>
                    @Item.WorkoutId
                </td>
                <td>
                @if (Item.Sets != null)
                {
                    @Item.Sets.Count
                }
                </td>
                <td id="tableButtons">
                    <a asp-controller="WorkoutSegment" asp-action="Edit" asp-route-id="@Item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                </td>
                <td id="tableButtons">
                <a asp-controller="WorkoutSegment" asp-action="Delete" asp-route-id="@Item.Id" class="btn btn-sm btn-outline-info">Delete</a>
                </td>
            </tr>
    }
    </table>