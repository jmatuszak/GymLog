@using GymLog.ViewModels
@model IEnumerable<WorkoutVM>


<h1>Workouts</h1>
<a asp-controller="Workout" asp-action="Create" class="btn btn-sm btn-outline-info" style="margin-bottom:10px;">Create new</a>

<table>
    <tr>
        <th width="5%">Id</th>
        <th>Name</th>
        <th>Segments</th>
        <th>Template ID</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>User ID</th>

    </tr>
    @foreach (var Item in @Model)
    {
        <tr>
            <td>
                @Item.Id
            </td>
            <td>
                @Item.Name
            </td>
            <td>
                @if (Item.WorkoutSegmentsVM != null)
                {
                    @Item.WorkoutSegmentsVM.Count
                }
            </td>
            <td>
                @Item.TemplateId
            </td>
            <td>
                @Item.StartDate
            </td>
            <td>
                @Item.EndDate
            </td>
            <td>
                @Item.AppUserId
            </td>

            <td id="tableButtons">
                <a asp-controller="Workout" asp-action="Edit" asp-route-id="@Item.Id" class="btn btn-sm btn-outline-info">Edit</a>
            </td>
            <td id="tableButtons">
                <a asp-controller="Workout" asp-action="Delete" asp-route-id="@Item.Id" class="btn btn-sm btn-outline-info">Delete</a>
            </td>
        </tr>
    }
</table>