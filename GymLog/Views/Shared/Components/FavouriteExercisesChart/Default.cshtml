@using GymLog.Data.Enum
@using GymLog.ViewModels
@model ChartDataVM

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<canvas id="barChart"></canvas>


<script>
    var viewModelData = @Html.Raw(Json.Serialize(Model));
    var ctx = document.getElementById('barChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: viewModelData.labels,
            datasets: [{
                label: 'Your favourite exercises',
                data: viewModelData.values,

                backgroundColor: [
                  'rgba(255, 99, 132, 0.3)',
                  'rgba(255, 159, 64, 0.3)',
                  'rgba(255, 205, 86, 0.3)',
                  'rgba(75, 192, 192, 0.3)',
                  'rgba(250, 120, 207, 0.3)'
                ],
                borderColor: [
                  'rgb(255, 99, 132)',
                  'rgb(255, 159, 64)',
                  'rgb(255, 205, 86)',
                  'rgb(75, 192, 192)',
                  'rgb(250, 120, 250)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    title: {
                        display: true,
                        text: 'Workouts'
                    },
                    beginAtZero: true
                }
            }
        }
    });
</script>